<!DOCTYPE html>
<html>
<head>
  <title>Audit</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.maskedinput.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.maskmoney.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "masks.js", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <div class="header">
      <span style="margin-right: 25px;"><%= current_user.name %></span>
      <%= link_to "Sair", sessions_destroy_path, method: :delete, class: "link-red" %>
    </div>
  <% end %>
  <div class="flash">
    <% if flash.any? %>
      <div class="flash_<%= flash.first[0] %>"><%= flash.first[1] %></div>
    <% end %>
  </div>
  <div class="yield"><%= yield %></div>
</body>
</html>
